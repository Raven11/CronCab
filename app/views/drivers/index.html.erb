<h1>Listing drivers</h1>

<div class="table table-striped">
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Mobile</th>
				<th>License no</th>
				<th>Pan no</th>
				<th>Image</th>
				<th>Status</th>
				<th>Encrypted_password</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @drivers.each do |driver| %>
				<tr>
					<td><%= driver.name %></td>
					<td><%= driver.mobile %></td>
					<td><%= driver.license_no %></td>
					<td><%= driver.pan_no %></td>
					<td><%= image_tag driver.image.picture_url(:thumb) unless driver.image.nil? or driver.image.picture.nil? %></td>
					<td><%= driver.status %></td>
					<td><%= driver.encrypted_password %></td>
					<td><%= link_to 'Show', driver, :class => 'btn btn-mini' %></td>
					<td><%= link_to 'Edit', edit_driver_path(driver), :class => 'btn btn-mini' %></td>
					<td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br>

<%= link_to 'New Driver', new_driver_path, :class => 'btn btn-primary' %>
